{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "paths": {},
    "composite": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@rise-tools/react"
  },
  "exclude": [
    "**/node_modules",
    "**/__tests__",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/lib"
  ]
}
